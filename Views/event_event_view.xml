<odoo>
    //Form View
    <record id="event_event_form_view" model="ir.ui.view">
        <field name="name">event.manger.view.form</field>
        <field name="model">event.manger</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="date"/>
                <field name="location"/>
                <field name="description"/>
            </form>

        </field>
    </record>

    //Tree view
    <record id="event_event_tree_view" model="ir.ui.view">
        <field name="name">event.manger.view.tree</field>
        <field name="model">event.manger</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="location"/>
                <field name="description"/>
            </tree>

        </field>
    </record>


    <record id="event_action" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="res_model">event.manger</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>